<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.0">
    <LinearLayout
        android:id="@+id/upper_container"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="5.5">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
            <fragment
                android:id="@+id/trip_pass_edit_edit_origin_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_centerInParent="true" />
            <fragment
                android:id="@+id/trip_pass_edit_edit_dest_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_centerInParent="true" />
        </LinearLayout>
        <fragment
            android:id="@+id/trip_pass_edit_googlemap"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lower_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="4.5"
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="#efefef">
        <LinearLayout
            android:id="@+id/upperlayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="3dp"
            android:paddingTop="7dp">
            <LinearLayout
                android:id="@+id/member_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/textview_member_title"
                    android:text="Driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_member"
                    android:text="Jacky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#565656"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/origin_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone">
                <TextView
                    android:text="Origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_origin"
                    android:text="Taman Amansiara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#565656"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dest_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:visibility="gone">
                <TextView
                    android:text="Destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_dest"
                    android:text="Taman Amansiara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#565656"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/arrivetime_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <TextView
                    android:text="Arrive Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_arrivetime"
                    android:text="Set time"
                    android:drawablePadding="12dp"
                    android:drawableRight="@drawable/right_arrow_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#565656"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/day_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:text="Day(s)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_day"
                    android:text="Set days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/right_arrow_small"
                    android:drawablePadding="12dp"
                    android:textColor="#565656"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/female_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:text="Female Only"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp" />
                <Switch
                    android:id="@+id/switch_femaleonly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/availableSeat_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="1dp">
                <TextView
                    android:text="Available Seat(s)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
              <Spinner
               android:id="@+id/spinner_seat"
               android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:drawablePadding="12dp"
               android:drawableRight="@drawable/right_arrow_small"
               android:textColor="#000000"
               android:gravity="right"
               android:background="#ffffff"
               android:layout_weight="1" />              
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnlyt_tripcon_continue"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:layout_weight="3"
            android:minWidth="25px"
            android:minHeight="25px"
            android:weightSum="1.0"
            android:layout_marginTop="3dp"
            android:background="#ffffff"
            android:paddingTop="6dp"
            android:paddingBottom="7dp">
            <LinearLayout
                android:id="@+id/Distance_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp">
                <TextView
                    android:text="DISTANCE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_distance"
                    android:text="55 KM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#565656"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/time_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:text="TIME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_time"
                    android:text="08:00 AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#565656"
                    android:gravity="right" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cost_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="3dp">
                <TextView
                    android:text="COST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000" />
                <TextView
                    android:id="@+id/textview_cost"
                    android:text="RM 44.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#565656"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lowerlayout_btn"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:minWidth="25px"
            android:minHeight="25px"
            android:gravity="center_horizontal"
            android:weightSum="1.0"
            android:background="#ffffff">
            <Button
                android:id="@+id/trip_pass_edit_edit_continue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Update" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>